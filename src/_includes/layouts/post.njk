---
layout: base.njk
permalink: /posts/{{ page.fileSlug }}/index.html
---

<article class="post">
  <header class="post-header">
    <p class="post-meta">{{ page.date | readableDate }}</p>
    <h1 class="post-title">{{ title }}</h1>
  </header>
  <div class="prose">
    {{ content | safe }}
  </div>
</article>