<header class="site-header">
    <nav class="nav-shell" aria-label="Primary">
        <a class="brand" href="/">PregNut</a>
        <div class="nav-links">
            <a class="nav-link{% if page.url == '/' %} is-active{% endif %}" href="/">Home</a>
            <a class="nav-link{% if page.url == '/about/' %} is-active{% endif %}" href="/about/">About</a>
            <a class="nav-link{% if page.url == '/app/' %} is-active{% endif %}" href="/app/">Top Foods</a>
            <a class="nav-link{% if page.url == '/blog/' or '/blog/' in page.url or '/posts/' in page.url %} is-active{% endif %}" href="/blog/">Blog</a>
        </div>
        <div class="nav-search">
            <label class="sr-only" for="FoodFinderInput">Search Food</label>
            <input id="FoodFinderInput" class="nav-input" type="text" placeholder="Search Food"
                onkeydown="if (event.keyCode == 13) document.getElementById('FoodFinderSearchButton').click()">
            <button id="FoodFinderSearchButton" class="nav-button" type="button">Search</button>
        </div>
    </nav>
</header>


 
